<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
    <VBox class="vBoxTopProfil" items="{newModel}">
        <f:Form id="FormDisplay354wideDual" editable="false">
            <f:title>
                <core:Title text="Profilinformation"/>
            </f:title>
            <f:layout>
                <f:ResponsiveGridLayout labelSpanXL="4" labelSpanL="3" labelSpanM="4" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="4" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="1" columnsM="1" singleContainerFullSize="false"/>
            </f:layout>
            <f:formContainers>
                <f:FormContainer title="Meine Person">
                    <f:formElements>
                        <f:FormElement label="Name">
                            <f:fields>
                                <Text text="{newModel>username}" id="nameText"/>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="Standort">
                            <f:fields>
                                <Text text="Kassel"/>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="Abteil">
                            <f:fields>
                                <Text text="Softwareentwicklung"/>
                            </f:fields>
                        </f:FormElement>
                    </f:formElements>
                </f:FormContainer>
                <f:FormContainer title="Mein Konto">
                    <f:formElements>
                        <f:FormElement label="Benutzer-ID">
                            <f:fields>
                                <Text text="1"/>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="Meine E-Mail Adresse">
                            <f:fields>
                                <Text text="Max@email.de"/>
                            </f:fields>
                        </f:FormElement>
                    </f:formElements>
                </f:FormContainer>
            </f:formContainers>
        </f:Form>
    </VBox>
</core:FragmentDefinition>